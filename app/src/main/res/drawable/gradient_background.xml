<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#6A11CB"
                android:endColor="#2575FC"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Blur Overlay -->
    <item android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF"/> <!-- Semi-transparent white overlay -->
        </shape>
    </item>
</layer-list>
